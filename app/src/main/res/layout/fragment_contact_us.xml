<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_info"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.ContactUsFragment">


    <TextView
        android:id="@+id/tv_contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/size_100dp"
        android:layout_marginEnd="54dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        android:typeface="serif"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_admin_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:ems="10"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/tv_admin_name"
        app:layout_constraintStart_toStartOf="@+id/tv_admin_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_admin_name" />

    <TextView
        android:id="@+id/tv_admin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        android:typeface="serif"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/tv_contact_info"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_contact_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_contact_info" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.717"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/size_100dp"
        android:layout_marginEnd="54dp"
        android:ems="10"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        android:textStyle="normal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/admin_name"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="serif"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/et_contact"
        app:layout_constraintStart_toStartOf="@+id/et_contact"
        app:layout_constraintTop_toBottomOf="@+id/et_contact" />

    <EditText
        android:id="@+id/et_admin_email"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/email"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="serif"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/et_admin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_admin"
        app:layout_constraintTop_toBottomOf="@+id/tv_admin_email" />
</androidx.constraintlayout.widget.ConstraintLayout>