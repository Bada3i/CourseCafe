<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <View
        android:id="@+id/view_bar_aud_request_dialog"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/bubble_gum_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_aud_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audience Register Request"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20"
        app:layout_constraintBottom_toBottomOf="@+id/view_bar_aud_request_dialog"
        app:layout_constraintEnd_toEndOf="@+id/view_bar_aud_request_dialog"
        app:layout_constraintStart_toStartOf="@+id/view_bar_aud_request_dialog"
        app:layout_constraintTop_toTopOf="@+id/view_bar_aud_request_dialog"
        app:layout_constraintVertical_bias="0.571"
        app:layout_constraintHorizontal_bias="0.24"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:background="@drawable/btn_shapes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_bar_aud_request_dialog">

        <Button
            android:id="@+id/btn_cancle_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_32dp"
            android:layout_marginBottom="@dimen/margin_32dp"
            android:background="@drawable/btn_shapes"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/cancel"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_aud_reg_resuest"
            app:layout_constraintTop_toBottomOf="@+id/tv_aud_reg_resuest"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btn_send_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_24dp"
            android:background="@drawable/btn_shapes"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/send"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/btn_cancle_request"
            app:layout_constraintEnd_toEndOf="@+id/tv_aud_reg_resuest"
            app:layout_constraintTop_toTopOf="@+id/btn_cancle_request" />

        <TextView
            android:id="@+id/tv_aud_reg_resuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:text="@string/audience_register_request_text"
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>