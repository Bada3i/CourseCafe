<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_payment_amount_paypal"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/small_btn_shapes"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_text_reg_fee"
        app:layout_constraintStart_toStartOf="@+id/tv_text_reg_fee"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_reg_fee" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text=" OMR "
        android:textAlignment="center"
        android:textSize="@dimen/margin_32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_payment_amount_paypal"
        app:layout_constraintEnd_toEndOf="@+id/tv_text_reg_fee"
        app:layout_constraintStart_toEndOf="@+id/tv_payment_amount_paypal"
        app:layout_constraintTop_toTopOf="@+id/tv_payment_amount_paypal" />

    <Button
        android:id="@+id/btn_make_payment_paypal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:background="@drawable/buttonshape"
        android:text="Make Payment"
        android:textSize="@dimen/text_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_text_reg_fee"
        app:layout_constraintStart_toStartOf="@+id/tv_text_reg_fee" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="Kindly Click on (Make Payment)...\n to Process with Payment..."
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toEndOf="@+id/tv_text_reg_fee"
        app:layout_constraintStart_toStartOf="@+id/tv_text_reg_fee"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_amount_paypal" />

    <TextView
        android:id="@+id/tv_text_reg_fee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:text="Course Registration Fee"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_make_payment_paypal"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/paypal" />
</androidx.constraintlayout.widget.ConstraintLayout>